{
	"listen": 1888,
	
	"requests": {
		"rate": {
			"source": "X-API-Key",
			"span": 300000,
			"accuracy": 10,
			"limit": 1000
		},
		"log": {
			"level": "error"
		}
	},
	
	"platforms": [{ 
		"type": "lxc", 
		"settings": {
			"limit": {
				"count": 50,
				"memory": 150000,
				"cpu": 1000
			},
			"storage": "./var/instances",
			"path": "/var/lib/lxc",
			"network": {
				"pool": "10.0.2.1/24",
				"reserved": [ "10.0.2.1" ],
				"device": "lxbr0"
			}
		} 
	}, {
		"type": "native",
		"settings": {
			"storage": "./var/instances"
		}
	}],
	
	"log": {
		"console": { "colorize": true, "level": "info" }
	},
	
	"store": {
		"type": "redis",
		"settings": { "host": "127.0.0.1", "port": 6379 }
	}
}